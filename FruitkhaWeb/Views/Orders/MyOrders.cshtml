@model IEnumerable<FruitkhaWeb.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<!-- breadcrumb -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Quản lý đơn hàng</p>
					<h1>Đơn hàng của tôi</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb -->

<!-- my orders -->
<div class="product-section mt-150 mb-150">
	<div class="container">
		@if (Model.Any())
		{
			<div class="row">
				<div class="col-lg-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th>Mã đơn</th>
									<th>Ngày đặt</th>
									<th>Tổng tiền</th>
									<th>Trạng thái</th>
									<th>Hành động</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var order in Model)
								{
									<tr class="table-body-row">
										<td>#@order.Id</td>
										<td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
										<td>@order.TotalAmount.ToString("N0")đ</td>
										<td>
											@switch (order.Status)
											{
												case "Pending":
													<span class="badge badge-warning">Đang xử lý</span>
													break;
												case "Processing":
													<span class="badge badge-info">Đang giao</span>
													break;
												case "Completed":
													<span class="badge badge-success">Hoàn thành</span>
													break;
												case "Cancelled":
													<span class="badge badge-danger">Đã hủy</span>
													break;
											}
										</td>
										<td>
											<a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">Xem chi tiết</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		}
		else
		{
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="alert alert-info">
						<h4>Bạn chưa có đơn hàng nào!</h4>
						<p>Hãy mua sắm và đặt hàng ngay.</p>
						<a asp-controller="Products" asp-action="Index" class="boxed-btn mt-3">Xem sản phẩm</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
<!-- end my orders -->
