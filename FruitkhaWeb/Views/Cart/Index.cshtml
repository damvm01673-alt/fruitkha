@model List<FruitkhaWeb.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ hàng";
    decimal subtotal = Model.Sum(x => x.Subtotal);
    decimal shipping = subtotal > 0 ? (subtotal >= 500000 ? 0 : 30000) : 0;
    decimal total = subtotal + shipping;
}

<!-- breadcrumb -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Tươi và Hữu cơ</p>
					<h1>Giỏ hàng</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb -->

<!-- cart -->
<div class="cart-section mt-150 mb-150">
	<div class="container">
		@if (TempData["Message"] != null)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				@TempData["Message"]
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		}

		@if (Model.Any())
		{
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Hình ảnh</th>
									<th class="product-name">Tên sản phẩm</th>
									<th class="product-price">Giá</th>
									<th class="product-quantity">Số lượng</th>
									<th class="product-total">Thành tiền</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr class="table-body-row">
										<td class="product-remove">
											<form asp-controller="Cart" asp-action="RemoveFromCart" method="post" style="display:inline">
												<input type="hidden" name="productId" value="@item.ProductId" />
												<button type="submit" style="border:none;background:none;color:#f28123;cursor:pointer;">
													<i class="far fa-window-close"></i>
												</button>
											</form>
										</td>
										<td class="product-image">
											<img src="~/@(item.ImageUrl ?? "assets/img/products/product-img-1.jpg")" alt="@item.ProductName" style="max-width:80px;">
										</td>
										<td class="product-name">@item.ProductName</td>
										<td class="product-price">@item.Price.ToString("N0")đ</td>
										<td class="product-quantity">
											<form asp-controller="Cart" asp-action="UpdateQuantity" method="post" style="display:inline">
												<input type="hidden" name="productId" value="@item.ProductId" />
												<input type="number" name="quantity" value="@item.Quantity" min="1" style="width:60px;">
												<button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
											</form>
										</td>
										<td class="product-total">@item.Subtotal.ToString("N0")đ</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="total-section">
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th>Tổng cộng</th>
									<th>Giá</th>
								</tr>
							</thead>
							<tbody>
								<tr class="total-data">
									<td><strong>Tạm tính: </strong></td>
									<td>@subtotal.ToString("N0")đ</td>
								</tr>
								<tr class="total-data">
									<td><strong>Phí vận chuyển: </strong></td>
									<td>@(shipping == 0 ? "Miễn phí" : shipping.ToString("N0") + "đ")</td>
								</tr>
								<tr class="total-data">
									<td><strong>Tổng tiền: </strong></td>
									<td><strong class="orange-text">@total.ToString("N0")đ</strong></td>
								</tr>
							</tbody>
						</table>
						<div class="cart-buttons">
							<a asp-controller="Products" asp-action="Index" class="boxed-btn">Tiếp tục mua</a>
							<a asp-controller="Orders" asp-action="Checkout" class="boxed-btn black">Thanh toán</a>
						</div>
					</div>
				</div>
			</div>
		}
		else
		{
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="alert alert-info">
						<h4>Giỏ hàng của bạn đang trống!</h4>
						<p>Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm.</p>
						<a asp-controller="Products" asp-action="Index" class="boxed-btn mt-3">Xem sản phẩm</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
<!-- end cart -->
