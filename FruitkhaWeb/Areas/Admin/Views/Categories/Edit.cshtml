@model FruitkhaWeb.Models.Category

@{
    ViewData["Title"] = "Sửa Danh mục";
}

<!-- breadcrumb -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Quản trị</p>
					<h1>Sửa Danh mục</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb -->

<div class="checkout-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2">
				<div class="billing-address-form">
					<form asp-action="Edit" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<input type="hidden" asp-for="Id" />
						
						<div class="form-group">
							<label asp-for="Name"></label>
							<input asp-for="Name" class="form-control" required />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Description"></label>
							<textarea asp-for="Description" class="form-control" rows="3"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>
								<input asp-for="IsActive" type="checkbox" /> Hoạt động
							</label>
						</div>

						<div class="form-group">
							<button type="submit" class="boxed-btn">Cập nhật</button>
							<a asp-action="Index" class="boxed-btn black">Hủy</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
