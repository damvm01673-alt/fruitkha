@model IEnumerable<FruitkhaWeb.Models.Product>

@{
    ViewData["Title"] = "Quản lý Sản phẩm";
}

<!-- breadcrumb -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Quản trị</p>
					<h1>Quản lý Sản phẩm</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb -->

<div class="product-section mt-150 mb-150">
	<div class="container">
		@if (TempData["Success"] != null)
		{
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				@TempData["Success"]
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		}

		<div class="row mb-4">
			<div class="col-lg-12">
				<a asp-action="Create" class="boxed-btn">Thêm sản phẩm mới</a>
				<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="boxed-btn black">Quay lại</a>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-12">
				<div class="cart-table-wrap">
					<table class="cart-table">
						<thead class="cart-table-head">
							<tr class="table-head-row">
								<th>ID</th>
								<th>Tên</th>
								<th>Danh mục</th>
								<th>Giá</th>
								<th>Giá KM</th>
								<th>Tồn kho</th>
								<th>Trạng thái</th>
								<th>Hành động</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr class="table-body-row">
									<td>@item.Id</td>
									<td>@item.Name</td>
									<td>@item.Category.Name</td>
									<td>@item.Price.ToString("N0")đ</td>
									<td>@(item.SalePrice?.ToString("N0") + "đ")</td>
									<td>@item.Stock</td>
									<td>
										@if (item.IsActive)
										{
											<span class="badge badge-success">Hoạt động</span>
										}
										else
										{
											<span class="badge badge-secondary">Không hoạt động</span>
										}
										@if (item.IsNewProduct)
										{
											<span class="badge badge-info">Mới</span>
										}
										@if (item.IsPromotional)
										{
											<span class="badge badge-warning">KM</span>
										}
									</td>
									<td>
										<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
										<form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
											<button type="submit" class="btn btn-sm btn-danger">Xóa</button>
										</form>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
