@model FruitkhaWeb.Models.Product

@{
    ViewData["Title"] = "Thêm Sản phẩm";
}

<!-- breadcrumb -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Quản trị</p>
					<h1>Thêm Sản phẩm mới</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb -->

<div class="checkout-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2">
				<div class="billing-address-form">
					<form asp-action="Create" method="post">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						
						<div class="form-group">
							<label asp-for="Name"></label>
							<input asp-for="Name" class="form-control" required />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Description"></label>
							<textarea asp-for="Description" class="form-control" rows="3"></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="CategoryId"></label>
							<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" required></select>
							<span asp-validation-for="CategoryId" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Price"></label>
							<input asp-for="Price" class="form-control" type="number" step="0.01" required />
							<span asp-validation-for="Price" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="SalePrice"></label>
							<input asp-for="SalePrice" class="form-control" type="number" step="0.01" />
							<span asp-validation-for="SalePrice" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="Stock"></label>
							<input asp-for="Stock" class="form-control" type="number" required />
							<span asp-validation-for="Stock" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label asp-for="ImageUrl"></label>
							<input asp-for="ImageUrl" class="form-control" placeholder="assets/img/products/product-img-1.jpg" />
							<span asp-validation-for="ImageUrl" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>
								<input asp-for="IsActive" type="checkbox" checked /> Hoạt động
							</label>
						</div>

						<div class="form-group">
							<label>
								<input asp-for="IsNewProduct" type="checkbox" /> Sản phẩm mới
							</label>
						</div>

						<div class="form-group">
							<label>
								<input asp-for="IsPromotional" type="checkbox" /> Sản phẩm khuyến mãi
							</label>
						</div>

						<div class="form-group">
							<button type="submit" class="boxed-btn">Thêm sản phẩm</button>
							<a asp-action="Index" class="boxed-btn black">Hủy</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
