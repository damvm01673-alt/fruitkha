@{
    ViewData["Title"] = "Quản trị";
}

<!-- breadcrumb -->
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Hệ thống quản trị</p>
					<h1>Trang quản trị</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end breadcrumb -->

<div class="product-section mt-150 mb-150">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 text-center">
				<h2>Chào mừng đến với trang quản trị Fruitkha</h2>
				<p class="mt-4">Chọn chức năng quản lý:</p>
			</div>
		</div>
		<div class="row mt-5">
			<div class="col-lg-4 col-md-6 text-center mb-4">
				<div class="single-product-item">
					<h3>Quản lý Danh mục</h3>
					<p>Thêm, sửa, xóa danh mục sản phẩm</p>
					<a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="cart-btn"><i class="fas fa-list"></i> Quản lý danh mục</a>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 text-center mb-4">
				<div class="single-product-item">
					<h3>Quản lý Sản phẩm</h3>
					<p>Thêm, sửa, xóa sản phẩm</p>
					<a asp-area="Admin" asp-controller="Products" asp-action="Index" class="cart-btn"><i class="fas fa-shopping-bag"></i> Quản lý sản phẩm</a>
				</div>
			</div>
			<div class="col-lg-4 col-md-6 text-center mb-4">
				<div class="single-product-item">
					<h3>Quản lý Đơn hàng</h3>
					<p>Xem và quản lý đơn hàng</p>
					<a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="cart-btn"><i class="fas fa-clipboard-list"></i> Quản lý đơn hàng</a>
				</div>
			</div>
		</div>
	</div>
</div>
